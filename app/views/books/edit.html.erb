<% provide(:title, 'Edytuj książkę') %>
<h1>Edytuj książkę</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @book, local: true) do |f| %>
      <% if @book.errors.any? %>
	    <div id="error_explanation">
	      <div class="alert alert-danger">
	        Formularz zawiera następującą liczbę błędów: <%= @book.errors.count %>.
	      </div>
	      <ul>
	      <% @book.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
    
      <%= f.label :title, "Tytuł" %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :author, "Autor" %>
      <%= f.text_field :author, class: 'form-control' %>

      <%= f.label :description, "Opis"  %>
      <%= f.text_area :description, class: 'form-control' %>

      <%= f.label :price, "Cena książki"  %>
      <%= f.text_field :price, class: 'form-control' %>

      <%= f.label :content, "Zawartość książki"  %>
      <%= f.text_area :content, class: "field", placeholder: "Witam w mojej książce..." %>

      <%= f.submit "Zapisz zmiany", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>